package com.techlab.jdbc;

import java.sql.*;

public class Insertion {

	public static void main(String[] args) throws SQLException {
		java.sql.Connection connection = null;
		java.sql.Statement stmt = null;
		ResultSet res = null;

		try {
			connection = DriverManager
					.getConnection("jdbc:mysql://localhost:3306/swabhav_techlab?user=root&password=root");
			System.out.println("successfull connection");

			stmt = connection.createStatement();
			int rows = stmt.executeUpdate("insert into student(id,name,lang) values(1,'abc','java')");
			res = stmt.executeQuery("select * from student");

			while (res.next()) {
				System.out.println(res.getInt("id") + " " + res.getString("name") + " " + res.getString("lang"));
			}

			int rows = stmt.executeUpdate("update student set id=12 where name='abc'");
			res = stmt.executeQuery("select * from student");

			while (res.next()) {
				System.out.println(res.getInt("id") + " " + res.getString("name") + " " + res.getString("lang"));
			}
		} catch (SQLException e) {
			System.out.println("unsuccessfull ");
			e.printStackTrace();
		} finally {
			connection.close();
		}

	}

}
