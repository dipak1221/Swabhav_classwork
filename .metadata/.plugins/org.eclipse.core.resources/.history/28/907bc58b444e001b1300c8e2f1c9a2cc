package com.techlab.account;

public class Account {
	private double amount;
	private String name;
	private int accNO;
	public Account(double amount, String name, int accNO) {
		super();
		this.amount = amount;
		this.name = name;
		this.accNO = accNO;
	}
	public double getAmount() {
		return amount;
	}
	public String getName() {
		return name;
	}
	public int getAccNO() {
		return accNO;
	}
	
	public void deposit(int amount) {
		this.amount+=amount;
	}

}
